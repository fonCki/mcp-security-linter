{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Default configuration for MCP Security Linter",
  "global": {
    "fileExtensions": [
      ".js",
      ".ts",
      ".jsx",
      ".tsx",
      ".py",
      ".java",
      ".go",
      ".rb",
      ".json",
      ".env",
      ".env.example",
      ".env.local",
      ".env.production",
      ".yml",
      ".yaml",
      ".sh",
      ".bash",
      ".zsh",
      ".dockerfile"
    ],
    "excludePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/tests/fixtures/**",
      "**/test/fixtures/**",
      "**/.vscode/**",
      "**/.idea/**",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/pnpm-lock.yaml"
    ],
    "testFilePatterns": [
      ".test.",
      ".spec.",
      "__tests__",
      "/tests/",
      "/test/"
    ],
    "defaultSeverity": "warning"
  },
  "analyzers": {
    "command-exec": {
      "enabled": true,
      "severity": "error",
      "fileExtensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".py",
        ".java",
        ".go",
        ".rb",
        ".sh",
        ".bash",
        ".zsh",
        ".json"
      ]
    },
    "config-file-scanner": {
      "enabled": false,
      "severity": "error",
      "fileExtensions": [
        ".json",
        ".yml",
        ".yaml",
        ".env",
        ".env.example"
      ],
      "description": "Scans MCP config files for malicious startup commands"
    },
    "token-passthrough": {
      "enabled": true,
      "severity": "warning"
    },
    "unauthenticated-endpoints": {
      "enabled": true,
      "severity": "warning"
    },
    "oauth-hygiene": {
      "enabled": false,
      "severity": "warning"
    },
    "argument-validation": {
      "enabled": false,
      "severity": "error"
    }
  },
  "output": {
    "formats": [
      "console",
      "json",
      "sarif"
    ],
    "defaultFormat": "console",
    "sarif": {
      "toolName": "MCP Security Linter",
      "informationUri": "https://github.com/fonCki/mcp-security-linter"
    }
  }
}